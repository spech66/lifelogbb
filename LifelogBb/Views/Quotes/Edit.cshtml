@model LifelogBb.Models.Quotes.EditQuoteViewModel

@{
    ViewData["Title"] = "Quote";
    ViewData["Pretitle"] = "Edit";
}

<div class="container-xl">
    <div class="row">
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Text" class="control-label mb-1"></label>
                    <input asp-for="Text" class="form-control form-control-lg" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label mb-1"></label>
                    <input asp-for="Author" class="form-control form-control-lg" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary btn-lg"><i class="fas fa-pen fa-4x"></i><br />Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div>
            <a class="btn btn-secondary btn-lg" asp-action="Index" role="button"><i class="fa-solid fa-arrow-circle-left fa-2x"></i><br />Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
