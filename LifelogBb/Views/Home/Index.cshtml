@{
    ViewData["Title"] = "Home";
}

<div class="container-xl">
    <h2>Quick add</h2>
    <div class="row row-deck row-cards">
        <div class="col-6 col-md-3">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Weights" asp-action="Create" role="button"><i class="fa-solid fa-weight-scale fa-4x"></i><br />Weight</a>
        </div>
        <div class="col-6 col-md-3">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Journals" asp-action="Create" role="button"><i class="fa-solid fa-pencil fa-4x"></i><br />Journal</a>
        </div>
        <div class="col-6 col-md-3">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="StrengthTrainings" asp-action="Create" role="button"><i class="fa-solid fa-dumbbell fa-4x"></i><br />Strength training</a>
        </div>
        <div class="col-6 col-md-3">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="EnduranceTrainings" asp-action="Create" role="button"><i class="fa-solid fa-running fa-4x"></i><br />Endurance training</a>
        </div>
        <div class="col-6 col-md-3">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Todos" asp-action="Create" role="button"><i class="fa-solid fa-check fa-4x"></i><br />Todos</a>
        </div>
    </div>

    <h2>Views</h2>
    <div class="row row-deck row-cards">
        <div class="col-12 col-md-12">
            <a class="btn btn-info btn-lg bigbtn" asp-controller="Home" asp-action="Dashboard" role="button"><i class="fa-solid fa-chalkboard fa-4x"></i><br />Dashboard</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Weights" role="button"><i class="fa-solid fa-weight-scale fa-4x"></i><br />Weight</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Journals" role="button"><i class="fa-solid fa-pencil fa-4x"></i><br />Journal</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="StrengthTrainings" role="button"><i class="fa-solid fa-dumbbell fa-4x"></i><br />Strength training</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="EnduranceTrainings" role="button"><i class="fa-solid fa-running fa-4x"></i><br />Endurance training</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Todos" role="button"><i class="fa-solid fa-check fa-4x"></i><br />Todos</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Goals" role="button"><i class="fa-solid fa-bullseye fa-4x"></i><br />Goals</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Habits" role="button"><i class="fa-solid fa-arrows-spin fa-4x"></i><br />Habits</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="BucketLists" role="button"><i class="fa-solid fa-tent fa-4x"></i><br />Bucket list</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary btn-lg bigbtn" asp-controller="Quotes" role="button"><i class="fa-solid fa-quote-right fa-4x"></i><br />Quotes</a>
        </div>
        <div class="col-12 col-md-3">
            <a class="btn btn-success btn-lg bigbtn" asp-controller="Home" asp-action="Config" role="button"><i class="fa-solid fa-gear fa-4x"></i><br />Config</a>
        </div>
        <div class="col-12 col-md-3">
            <a class="btn btn-danger btn-lg bigbtn" asp-controller="Account" asp-action="Logout" role="button"><i class="fa-solid fa-right-from-bracket fa-4x"></i><br />Logout</a>
        </div>
    </div>
</div>
