@model LifelogBb.Models.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-xl">
    <p class="lead">Access LifelogBB using the password provided in the configuration.</p>

    <div class="row">
        <div>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label mb-1"></label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" value="Create" class="btn btn-primary btn-lg"><i class="fa-solid fa-right-to-bracket fa-4x"></i><br />Login</button>
                </div>
            </form>

            <p class="mt-5 mb-3"><a href="/Account/GeneratePassword">Generate password hash</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
