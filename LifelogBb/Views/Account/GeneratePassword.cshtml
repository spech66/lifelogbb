@model LifelogBb.Models.Account.GeneratePasswordModel

@{
    ViewData["Title"] = "Generate password hash";
}

<div class="container text-center">
    <h1>@ViewData["Title"]</h1>

    <p class="fs-5">Generate a password hash to copy to the appsettings file.</p>

    @if (Model?.PasswordHash is not null)
    {
    <div class="row">
        <div>
                <div class="alert alert-info" role="alert">
                    <strong>Password hash:</strong> @Model.PasswordHash
                </div>
        </div>
    </div>
    }

    <div class="row">
        <div>
            <form asp-action="GeneratePassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label mb-1"></label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" value="Create" class="btn btn-primary btn-lg"><i class="fas fa-key fa-4x"></i><br />Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div>
            <a class="btn btn-secondary btn-lg" asp-action="Login" role="button"><i class="fa-solid fa-arrow-circle-left fa-2x"></i><br />Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
