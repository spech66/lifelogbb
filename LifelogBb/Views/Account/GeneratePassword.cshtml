@model LifelogBb.Models.Account.GeneratePasswordModel

@{
    ViewData["Title"] = "Generate password hash";
}

<div class="container-xl">
    <p class="lead">Generate a password hash to copy to the appsettings file.</p>

    @if (Model?.PasswordHash is not null)
    {
        <div class="row row-cards">
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    <strong>Password hash:</strong> @Model.PasswordHash
                </div>
            </div>
        </div>
    }

    <div class="row row-cards">
        <div class="col-12">
            <form asp-action="GeneratePassword" class="card" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label mb-1"></label>
                        <input asp-for="Password" class="form-control form-control-lg" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <a class="btn btn-link" asp-action="Login">Back</a>
                        <button type="submit" value="Save" class="btn btn-primary ms-auto"><i class="fas fa-key icon"></i>Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
