@using LifelogBb.Utilities;
@model PaginatedList<LifelogBb.Models.Entities.EnduranceTraining>

@{
    ViewData["Title"] = "Endurance Training";
    ViewData["PrimaryAction"] = "create";
    ViewData["SecondaryAction"] = "graph";
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table card-table table-vcenter text-nowrap datatable">
                        <thead>
                            <tr>
                                <th class="w-1">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Date</a>
                                </th>
                                <th>
                                    Exercise
                                </th>
                                <th>
                                    Distance
                                </th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    Speed (km/h)
                                </th>
                                <th>
                                    Pace (min/km)
                                </th>
                                <th>
                                    Rating
                                </th>
                                <th>
                                    Notes
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.CreatedAt)</a>
                                    </th>
                                    <td>
                                        <a asp-action="Graph" asp-route-exercise="@item.Exercise">@Html.DisplayFor(modelItem => item.Exercise)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Distance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Duration)
                                    </td>
                                    <td>
                                        @(item.Duration.HasValue ? string.Format("{0:0.00}", item.Distance / item.Duration.Value.TotalHours) : "")
                                    </td>
                                    <td>
                                        @(item.Duration.HasValue ? string.Format("{0:0.00}", item.Duration.Value.TotalMinutes / item.Distance) : "")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rating, "Rating")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button class="btn dropdown-toggle align-text-top" data-bs-boundary="viewport" data-bs-toggle="dropdown">Actions</button>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex align-items-center">
                    @await Component.InvokeAsync("Pagination", Model)
                </div>
            </div>
        </div>
    </div>
</div>
