@model LifelogBb.Models.Todos.EditTodoViewModel

@{
    ViewData["Title"] = "Todo";
    ViewData["Pretitle"] = "Edit";
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <form asp-action="Edit" class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label mb-1"></label>
                        <input asp-for="Title" class="form-control form-control-lg" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label mb-1"></label>
                        <input asp-for="Description" class="form-control form-control-lg" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label mb-1"></label>
                        <input asp-for="DueDate" class="form-control form-control-lg" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <label class="form-group form-check form-switch">
                            <input class="form-check-input" asp-for="IsCompleted" type="checkbox">
                            <span class="form-check-label">@Html.DisplayNameFor(model => model.IsCompleted)</span>
                        </label>
                    </div>
                    <div class="mt-3">
                        <label class="form-group form-check form-switch">
                            <input class="form-check-input" asp-for="IsImportant" type="checkbox">
                            <span class="form-check-label">@Html.DisplayNameFor(model => model.IsImportant)</span>
                        </label>
                    </div>
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <a class="btn btn-link" asp-action="Index">Back</a>
                        <button type="submit" value="Save" class="btn btn-primary ms-auto"><i class="fas fa-pen icon"></i>Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
