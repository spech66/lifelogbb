@model LifelogBb.Models.Goals.EditGoalViewModel

@{
    ViewData["Title"] = "Goal - Edit";
}

<div class="container text-center">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label mb-1"></label>
                    <input asp-for="Name" class="form-control form-control-lg" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label mb-1"></label>
                    <input asp-for="Description" class="form-control form-control-lg" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TargetValue" class="control-label mb-1"></label>
                    <input asp-for="TargetValue" class="form-control form-control-lg" />
                    <span asp-validation-for="TargetValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentValue" class="control-label mb-1"></label>
                    <input asp-for="CurrentValue" class="form-control form-control-lg" />
                    <span asp-validation-for="CurrentValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label mb-1"></label>
                    <input asp-for="StartDate" class="form-control form-control-lg" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label mb-1"></label>
                    <input asp-for="EndDate" class="form-control form-control-lg" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                    </label>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary btn-lg"><i class="fas fa-pen fa-4x"></i><br />Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div>
            <a class="btn btn-secondary btn-lg" asp-action="Index" role="button"><i class="fa-solid fa-arrow-circle-left fa-2x"></i><br />Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
